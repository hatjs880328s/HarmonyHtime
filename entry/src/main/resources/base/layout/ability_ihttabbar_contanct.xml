<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#ffffff">

    <DirectionalLayout
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:align_parent_bottom="true"
        ohos:background_element="$graphic:background_ability_roottabbar">
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="vertical">
            <Image
                ohos:top_margin="5vp"
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:image_src="$media:icon"
                ohos:layout_alignment="center"
                />
            <Text
                ohos:top_margin="10vp"
                ohos:height="10vp"
                ohos:width="match_parent"
                ohos:text_size="10fp"
                ohos:text="沟通"
                ohos:text_color="#000"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="vertical">
            <Image
                ohos:top_margin="5vp"
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:image_src="$media:icon"
                ohos:layout_alignment="center"
                />
            <Text
                ohos:top_margin="10vp"
                ohos:height="10vp"
                ohos:width="match_parent"
                ohos:text_size="10fp"
                ohos:text="通讯录"
                ohos:text_color="#ef"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="vertical">
            <Image
                ohos:top_margin="5vp"
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:image_src="$media:icon"
                ohos:layout_alignment="center"
                />
            <Text
                ohos:top_margin="10vp"
                ohos:height="10vp"
                ohos:width="match_parent"
                ohos:text_size="10fp"
                ohos:text="应用"
                ohos:text_color="#000"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:orientation="vertical">
            <Image
                ohos:top_margin="5vp"
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:image_src="$media:icon"
                ohos:layout_alignment="center"
                />
            <Text
                ohos:top_margin="10vp"
                ohos:height="10vp"
                ohos:width="match_parent"
                ohos:text_size="10fp"
                ohos:text="我的"
                ohos:text_color="#000"
                ohos:text_alignment="center"
                />
        </DirectionalLayout>
    </DirectionalLayout>
</DependentLayout>